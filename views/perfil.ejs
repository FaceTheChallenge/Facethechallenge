<!DOCTYPE HTML>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<title>Registro de nuevo usuario</title>

<!-- Cargamos hojas de estilo y ficheros JavaScript -->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="js/comprobar.js" language="JavaScript"> </script>
<script src="js/funcionesExternas.js" language="JavaScript"> </script>
<link href="css/estilosFormulario.css" rel="stylesheet" type="text/css">
<link href="css/estilosPerfil.css" rel="stylesheet" type="text/css">
<script>
<!-- Método para cambio de contenido dentro del iframe !-->
	function cambio(url){
		var iframe=$('#container');
		iframe.attr('src',url);
			
	}
</script>
</head>

<body>
<div  class="form" id="formPerfil">
  <form id="perfilform"  name="perfilform" >
    <p class="contact">
      <label for="name">Nombre completo</label>
    </p>
    <input id="nombre" class="nombre" name="name" type="text">
    <p class="contact">
      <label for="email">Email</label>
    </p>
    <input id="email" name="email"  type="email">
    <p class="contact">
      <label for="username">Nombre de usuario</label>
    </p>
    <input id="username" name="username" required type="text">
    <p class="contact">
      <label for="password">Contraseña</label>
    </p>
    <input type="password" id="password" name="password" required>
    <p class="contact">
      <label for="repassword">Confirmar contraseña</label>
    </p>
    <input type="password" id="repassword" name="repassword" required>
    <br>
    <label>Sexo</label>
    <select class="select-style" id="gender">
      <option value="m">Masculino</option>
      <option value="f">Femenino</option>
    </select>
    <br>
    <br>
    <fieldset>
      <label>Cumpleaños</label>
      <label class="mes">
        <select class="select-style" id="BirthMonth">
          <option value="">Mes</option>
          <option  value="01">Enero</option>
          <option value="02">Febrero</option>
          <option value="03" >Marzo</option>
          <option value="04">Abril</option>
          <option value="05">Mayo</option>
          <option value="06">Junio</option>
          <option value="07">Julio</option>
          <option value="08">Agosto</option>
          <option value="09">Septiembre</option>
          <option value="10">Octubre</option>
          <option value="11">Noviembre</option>
          <option value="12" >Diciembre</option>
        </select>
      </label>
      <label>Día
        <input class="birthday" maxlength="2" id="BirthDay" required>
      </label>
      <label>Año
        <input class="birthyear" maxlength="4" id="BirthYear" required>
      </label>
    </fieldset>
    <br>
    <p class="contact">
      <label for="phone">Móvil</label>
      <input id="phone" name="phone"  type="text">
      <br>
      <br>
  	  <a href="indexNotificaciones"><input class="buttom" name="submit" id="submit" value="Volver"/></a>
      <br>
      <input class="buttom" name="submit" id="submit" value="Guardar" onClick="obtenValores()" />
  </form>
</div>
</body>
</html>